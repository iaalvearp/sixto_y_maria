<style>
    section {
        position: relative;
        width: 100%;
        max-width: 48rem;
        margin: 0 auto;
        overflow: hidden;
    }
    .picture-container {
        position: relative;
        width: 100%;
        height: 31vh;
        overflow: hidden;

        .hands {
            position: absolute;
            width: 100%;
            height: auto;
            object-fit: cover;
            object-position: center;
            z-index: 0;
        }
    }
    .flowers-container {
        position: relative;
        width: 100%;
        height: 6rem;
        display: flex;
        justify-content: space-between;
        align-items: center;

        .flower {
            width: auto;
            height: 100%;
            position: absolute;
        }
        .flower.left {
            left: -3rem;
        }
        .flower.right {
            right: -3rem;
        }
        .date {
            width: 40vw;
            height: auto;
            inset: 0;
            margin: auto;
        }

    }
    .calendary-container {
        position: relative;
        width: 300px;
        height: 180px;
        overflow: hidden;
        margin: 0 auto;
        
        .calendary {
            width: 100%;
            height: auto;
            position: absolute;
            inset: 0;
            margin: auto;
            z-index: 1;        
        }
        .selector {
            width: 2.5rem;
            height: auto;
            position: absolute;
            bottom: 3.25rem;
            right: 3rem;
            z-index: 0;        
        }
    }
    .calendary-text {
        width: 100%;
        padding: 1.5rem 0;

        p {
            font-family: 'Calibri', sans-serif;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5rem;
            text-align: center;
            color: var(--gray);
        }
    }
    @media (width >= 768px) {

        section {
            margin: 0 auto;
        }
        .picture-container {
            height: 25rem;
        }
        .flowers-container {
            height: 12rem;

            .date {
                width: 30vw;
                max-width: 13rem;
            }
        }
        .calendary-container {
            width: 30rem;
            height: 18rem;

            .calendary {
                width: 100%;
                height: auto;
            }
            .selector {
                width: 4rem;
                bottom: 5.25rem;
                right: 5rem;
            }
        }
        .calendary-text {
            padding: 2rem 0;
            p {
                font-size: 1.5rem;
                line-height: 2rem;
            }
        }
    }
    @media (width >= 900px) {

        .calendary-container {
            height: 16rem;
        }

        .flowers-container {
            height: 10rem;

            .flower.left {
                left: 0;
            }
            .flower.right {
                right: 0;
            }
        }
    }
</style>