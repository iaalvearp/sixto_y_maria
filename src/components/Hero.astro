<header>
    <div class="green-line"></div>
    <div class="border-container">
        <img src="assets/hero-border-down.png" alt="">
    </div>
    <div class="countdown"></div>
</header>

<style>
    header {
        width: 100%;
        height: 100vh;
        position: relative;
        background-image: url('/images/hero.webp');
        background-size: cover;
        background-position: center;

        .green-line {
            position: absolute;
            top: 0;
            width: 100%;
            height: 2vh;
            background-color: var(--green);
        }
        .border-container {
            position: relative;
            width: 100%;
            height: 100%;
            bottom: 10vh;
            display: flex;
            justify-content: end;
            align-items: center;
            img {
                width: 100%;
                height: auto;
                position: absolute;
            }
        }
        .countdown {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 10vh;
            background-color: #fff;
        }
    }
</style>