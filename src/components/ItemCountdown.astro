---

interface Props {
    id: string,
    text: string
}

 const { id, text } = Astro.props

---

<div class="item-container to-return-up">
    <span id={ id } class="item-number">00</span>
    <span class="item-text">{ text }</span>
</div>

<style>
    .item-container {
        width: 100%;
        height: 100%;
        gap: 0.25rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: var(--gray);
        z-index: 2;

        .item-number {
            font-family: 'Times', serif;
            font-size: 1.75rem;
            font-weight: 300;
        }
        .item-text {
            font-family: 'Myriad', sans-serif;
            font-size: 0.75rem;
            font-weight: 300;
            text-transform: uppercase;
        }
    }
    @media (width >= 768px) {
        .item-container {

            .item-number {
                font-size: 2.25rem;
            }
            .item-text {
                font-size: 1rem;
            }
        }
    }
    @media (width >= 960px) {
        .item-container {

            .item-number {
                font-size: 1.75rem;
            }
            .item-text {
                font-size: 0.85rem;
            }
        }
    }
</style>