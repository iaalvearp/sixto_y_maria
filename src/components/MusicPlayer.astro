<div id="playerContainer" class="player-container">
    <svg
      id="play" 
      width="28"
      height="28"
      viewBox="0 0 24 24"
      fill="currentColor"
      class="icon-play">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
      <path d="M6 4v16a1 1 0 0 0 1.524 .852l13 -8a1 1 0 0 0 0 -1.704l-13 -8a1 1 0 0 0 -1.524 .852z" />
    </svg>
  
    <svg
      id="pause" 
      width="28"
      height="28"
      viewBox="0 0 24 24"
      fill="currentColor"
      class="icon-pause pressed">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
      <path d="M9 4h-2a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h2a2 2 0 0 0 2 -2v-12a2 2 0 0 0 -2 -2z" />
      <path d="M17 4h-2a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h2a2 2 0 0 0 2 -2v-12a2 2 0 0 0 -2 -2z" />
    </svg>
</div>
<style>
    .player-container {
        top: 80%;
        margin: 0 auto;
        height: 2rem;
        width: 2rem;
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 1fr;
        justify-items: center;
        align-items: center;
        border-radius: 9999px;
        color: var(--gray);
        background-color: #FFF;
        outline: 2px solid #FFF;
        transition: all 0.3s;
        cursor: pointer;
        opacity: 1;
        z-index: 50;

        &:hover {
            opacity: 1;
        }

        svg {
            grid-column: 1 / 2;
            grid-row: 1 / 2;
            transform: scale(0);
            transition: all 0.3s;

            &.pressed {
            transform: scale(1);
            }
        }
        @media (width >= 768px) {
          .player-container {
            width: 3rem;
            height: 3rem;
          }
        }

        @media (width >= 900px) {
          .player-container {
            width: 2rem;
            height: 2rem;
          }
        }

      }

</style>
  

<script>
    document.addEventListener('DOMContentLoaded', () => {
      const btnPlay = document.getElementById('play');
      const btnPause = document.getElementById('pause');
      const audio = new Audio('/sounds/music.m4a');
      
      const playMusic = () => {
        if (btnPlay && btnPause) {
          btnPlay.style.transform = "scale(0)";
          btnPause.style.transform = "scale(1)";
          audio.play();
        }
      };
      
      const pauseMusic = () => {
        if (btnPlay && btnPause) {
          audio.pause();
          btnPlay.style.transform = "scale(1)";
          btnPause.style.transform = "scale(0)";
        }
      };
      
      audio.addEventListener('ended', pauseMusic);

      
      // Asigna eventos solo si existen los elementos
      if (btnPlay) {
        btnPlay.addEventListener('click', playMusic);
      }
      
      if (btnPause) {
        btnPause.addEventListener('click', pauseMusic);
      }
      // Inicializa el estado en pause
      pauseMusic();
    });
  </script>
  